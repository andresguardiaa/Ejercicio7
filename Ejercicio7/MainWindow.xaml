<Window x:Class="Ejercicio7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Fluent="urn:fluent-ribbon"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Ejercicio7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel>
        <Grid DockPanel.Dock="Left" Background="#E5303030" Width="220">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" HorizontalAlignment="Stretch" BorderBrush="Transparent" Height="50"  Background="Transparent" HorizontalContentAlignment="Left">
                <StackPanel Orientation="Horizontal"  >
                    <materialDesign:PackIcon Kind="Speedometer" Foreground="White" Margin="0,0,20,0"/>
                    <TextBlock Text="Dashboard" Foreground="White" FontSize="16"/>
                </StackPanel>
            </Button>
            <StackPanel x:Name="Menu"  Margin="0,10,0,0" Grid.Row="1">
                <TextBlock Text="Your Stage" Foreground="White" FontSize="16" FontWeight="Bold" Margin="20,0,0,10"/>
                <Button HorizontalAlignment="Stretch" BorderBrush="Transparent" Click="MarticuloButton_Click" Background="Transparent" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal" Margin="-10,0,0,0" >
                        <materialDesign:PackIcon Kind="Bookshelf" Foreground="White" Margin="0,0,5,0"/>
                        <TextBlock Text="ModeloArtículo" Foreground="White" FontSize="16" FontWeight="Light"/>
                    </StackPanel>
                </Button>
                <Button HorizontalAlignment="Stretch" BorderBrush="Transparent" x:Name="Articulobtn" Click="Articulobtn_Click" Background="Transparent" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal" Margin="-10,0,0,0" >
                        <materialDesign:PackIcon Kind="Bell" Foreground="White" Margin="0,0,5,0"/>
                        <TextBlock Text="Articulo" Foreground="White" FontSize="16" FontWeight="Light"/>
                    </StackPanel>
                </Button>
                <Button HorizontalAlignment="Stretch" BorderBrush="Transparent" Background="Transparent" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal" Margin="-10,0,0,0" >
                        <materialDesign:PackIcon Kind="KnifeMilitary" Foreground="White" Margin="0,0,5,0" />
                        <TextBlock Text="Features" Foreground="White" FontSize="16" FontWeight="Light"/>
                    </StackPanel>
                </Button>
                <Button HorizontalAlignment="Stretch" BorderBrush="Transparent" Background="Transparent" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal" Margin="-10,0,0,0" >
                        <materialDesign:PackIcon Kind="Speedometer" Foreground="White" Margin="0,0,5,0"/>
                        <TextBlock Text="Map Marker" Foreground="White" FontSize="16" FontWeight="Light"/>
                    </StackPanel>
                </Button>
                <Button HorizontalAlignment="Stretch" BorderBrush="Transparent" Background="Transparent" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal" Margin="-10,0,0,0" >
                        <materialDesign:PackIcon Kind="Speedometer" Foreground="White" Margin="0,0,5,0"/>
                        <TextBlock Text="Assitant" Foreground="White" FontSize="16" FontWeight="Light"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </Grid>
        <Grid>

        </Grid>
    </DockPanel>

</Window>