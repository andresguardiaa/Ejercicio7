<UserControl x:Class="Ejercicio7.Dialogos.UCArbol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ejercicio7.Dialogos"
             xmlns:ent="clr-namespace:Ejercicio7.Backend.Modelo"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             x:Name="ucArbolEspacios"
             Loaded="ucArbolEspacios_Loaded"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1200">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <TextBlock Text="Árbol de Espacios" FontSize="24" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
        </Grid>
        <Grid DockPanel.Dock="Left">
            <TreeView x:Name="treeEspacios" ItemsSource="{Binding espacios}"
                      SelectedItemChanged="treeEspacios_SelectedItemChanged">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type ent:Espacio}" ItemsSource="{Binding Articulos}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Smoke" Width="16"/>
                            <TextBlock Text="{Binding Nombre}" Margin="5,0,0,0"/>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="({0})">
                                        <Binding Path="Articulos.Count"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type ent:Articulo}" ItemsSource="{Binding Salida}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Cigarette"/>
                            <TextBlock Text="{Binding Numserie}" Margin="10,0,0,0"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type ent:Salidum}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Cigar"/>
                            <TextBlock Text="{Binding Fechasalida, StringFormat='dd/MM/yyyy'}" Margin="10,0,0,0"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
            </TreeView>
        </Grid>
        
        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Editar Artículo" Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="0"/>
            <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding articuloSeleccionado.Numserie}" Grid.Column="0" Grid.Row="1" Width="150" materialDesign:HintAssist.Hint="Número de serie"/>
            <ComboBox Style="{StaticResource MaterialDesignFloatingHintComboBox}" SelectedItem="{Binding articuloSeleccionado.Estado}" materialDesign:HintAssist.Hint="Estado" Grid.Column="0" Grid.Row="2" Width="150"/>
            <DatePicker Style="{StaticResource MaterialDesignFloatingHintDatePicker}" SelectedDate="{Binding articuloSeleccionado.Fechaalta}" materialDesign:HintAssist.Hint="Fecha Alta" Grid.Column="1" Grid.Row="1" Width="150"/>
            <ComboBox Style="{StaticResource MaterialDesignFloatingHintComboBox}" SelectedItem="{Binding articuloSeleccionado.UsuarioaltaNavigation}" materialDesign:HintAssist.Hint="Usuario" ItemsSource="{Binding usuarios}" DisplayMemberPath="Nombre" Grid.Column="1" Grid.Row="2" Width="150"/>
            <ComboBox Style="{StaticResource MaterialDesignFloatingHintComboBox}" SelectedItem="{Binding articuloSeleccionado.ModeloNavigation}" materialDesign:HintAssist.Hint="Modelo" ItemsSource="{Binding modeloarticulos}" DisplayMemberPath="Nombre" Grid.Column="2" Grid.Row="1" Width="150"/>
            <ComboBox Style="{StaticResource MaterialDesignFloatingHintComboBox}" SelectedItem="{Binding articuloSeleccionado.DepartamentoNavigation}" materialDesign:HintAssist.Hint="Departamento" ItemsSource="{Binding departamentos}" DisplayMemberPath="Nombre" Grid.Column="2" Grid.Row="2" Width="150"/>
            <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding articuloSeleccionado.Observaciones}" Grid.Column="3" Grid.Row="1" Width="150"/>
            <ComboBox Style="{StaticResource MaterialDesignFloatingHintComboBox}" SelectedItem="{Binding articuloSeleccionado.EspacioNavigation}" materialDesign:HintAssist.Hint="Espacio" ItemsSource="{Binding espacios}" DisplayMemberPath="Nombre" Grid.Column="3" Grid.Row="2" Width="150"/>
            <Button Content="Actualizar" x:Name="btnActualizarArt" Grid.Column="4" Grid.Row="1" Margin="20,0,0,0" Width="100"/>
        </Grid>
        
        <Grid x:Name="panelCentral">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="dgArticulosEspacio"  Style="{StaticResource MahApps.Styles.DataGrid}" 
                      SelectionMode="Single" 
                      AutoGenerateColumns="False" CanUserAddRows="False" ColumnWidth="*" SelectedItem="{Binding articuloSeleccionado}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nº Serie" Binding="{Binding Numserie}"/>
                    <DataGridTextColumn Header="Modelo" Binding="{Binding ModeloNavigation.Nombre}"/>
                    <DataGridTextColumn Header="Usuario" Binding="{Binding UsuarioaltaNavigation}"/>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <DatePicker SelectedDate="{Binding Fechaalta}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            
            
            
        </Grid>

        

    </DockPanel>
</UserControl>
